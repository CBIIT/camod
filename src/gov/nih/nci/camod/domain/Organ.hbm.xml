<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Organ" 
    	table="organ"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="organ_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>
	    
	    <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>
        	
        <!-- nameUnctrlVocab -->
        <property name="nameUnctrlVocab" 
        	column="name_unctrl_vocab" 
        	type="string"/>        	
        	
        <!-- conceptCode -->
        <property name="conceptCode" 
        	column="concept_code" 
        	type="string"/>
        	
        <!-- histopathologyCollection (one-to-many bidirectional) -->
        <bag name="histopathologyCollection" 
        	table="organ_histopathology"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="organ_id"/>
        	<many-to-many column="histopathology_id"
            	unique="true"
            	class="Histopathology"/>
        </bag>
	</class>
</hibernate-mapping>