<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="AbstractCancerModel" 
    	table="abs_cancer_model"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="abs_cancer_model_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	    
	    
	    <!-- discriminator -->
	    <discriminator column="abs_cancer_model_type"
	    	type="string"/>	       
	    
	    <!-- experimentDesign -->
        <property name="experimentDesign" 
        	column="experiment_design" 
        	type="text"/>	
        
        <!-- modelDescriptor -->
        <property name="modelDescriptor" 
        	column="model_descriptor" 
        	type="string"/>  
        	
        <!-- state -->
        <property name="state" 
        	column="state" 
        	type="string"/>  	      	
        	
        <!-- publicationCollection (one-to-many unidirectional) -->
        <bag name="publicationCollection" 
        	table="abs_can_mod_publication"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="abs_cancer_model_id"/>
        	<many-to-many column="publication_id"
            	unique="true"
            	class="Publication"/>
        </bag>        
        
        <!-- availability: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one unidirectional) -->
        <many-to-one name="availability"
        	class="Availability"
        	column="availability_id"
        	cascade="all"
        	unique="true"/>
        	
        <!-- species (many-to-one unidirectional) -->
        <many-to-one
        	name="species"
        	column="taxon_id"
        	cascade="save-update"
        	class="Taxon"/>
        	
		<!-- submitter (many-to-one unidirectional) -->
        <many-to-one
        	name="submitter"
        	column="submitter_id"
        	cascade="save-update"
        	class="Person"/>
        	
        <!-- principalInvestigator (many-to-one unidirectional) -->
        <many-to-one
        	name="principalInvestigator"
        	column="principal_investigator_id"
        	cascade="save-update"
        	class="Person"/>
	</class>
</hibernate-mapping>