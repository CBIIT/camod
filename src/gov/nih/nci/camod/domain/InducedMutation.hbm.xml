<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<subclass name="InducedMutation" 
    	extends="EngineeredGene"
    	discriminator-value="IM"
        lazy="true">
	    
	    <!-- geneId -->
        <property name="geneId"
        	column="gene_id" 
        	type="string"/>
	    
	    <!-- description -->
        <property name="description" 
        	column="description" 
        	type="string"/>
        	
        <!-- geneticAlterationCollection (one-to-many unidirectional) -->
        <bag name="geneticAlterationCollection" 
        	table="ind_mut_gen_alteration"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="engineered_gene_id"/>
        	<many-to-many column="genetic_alteration_id"
            	unique="true"
            	class="GeneticAlteration"/>
        </bag>
    	
    	<!-- environmentalFactorCollection (one-to-many unidirectional) -->
        <bag name="environmentalFactorCollection" 
        	table="env_fac_ind_mutation"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="engineered_gene_id"/>
        	<many-to-many column="env_factor_id"
            	unique="true"
            	class="EnvironmentalFactor"/>
        </bag>
        
        	
	</subclass>
</hibernate-mapping>