<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<subclass name="InducedMutation" 
    	extends="EngineeredGene"
    	discriminator-value="IM"
        lazy="true">
	    
	    <!-- geneId -->
        <property name="geneId"
        	column="gene_id" 
        	type="string"/>
	    
	    <!-- description -->
        <property name="description" 
        	column="description" 
        	type="string"/>
        	
        <!-- geneticAlterationCollection (one-to-many unidirectional without 
        join table) -->
        <set name="geneticAlterationCollection"
	         cascade="all-delete-orphan"
		     sort="natural">
            <key column="genetic_alteration_id"/>
            <one-to-many class="GeneticAlteration"/>
        </set>         
       
        <!-- environmentalFactor (many-to-one unidirectional) -->
        <many-to-one
        	name="environmentalFactor"
        	column="environmental_factor_id"
        	cascade="save-update"
        	class="EnvironmentalFactor"/>        
        	
	</subclass>
</hibernate-mapping>