    Description: Hibernate mapping file for Histopathology
-->

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Histopathology" 
    	table="histopathology"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="histopathology_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>
	    
	    <!-- comments -->
        <property name="comments" 
        	column="comments" 
        	type="text"/>
        	
        <!-- grossDescription -->
        <property name="grossDescription" 
        	column="gross_description" 
        	type="string"/>
        	
        <!-- relationalOperation -->
        <property name="relationalOperation" 
        	column="relational_operation" 
        	type="string"/>	
        	
       	<!-- tumorIncidenceRate -->
        <property name="tumorIncidenceRate" 
        	column="tumor_incidence_rate" 
        	type="float"/>	 	
        	
       	<!-- survivalInfo -->
        <property name="survivalInfo" 
        	column="survival_info" 
        	type="string"/>	 
        
        <!-- ageOfOnset -->
        <property name="ageOfOnset" 
        	column="age_of_onset" 
        	type="string"/>	 
        
        <!-- microscopicDescription -->
        <property name="microscopicDescription" 
        	column="microscopic_description" 
        	type="string"
        	length="2000"/>	
        
        <!-- weightOfTumor -->
        <property name="weightOfTumor" 
        	column="weight_of_tumor" 
        	type="float"/>	
        
        <!-- volumeOfTumor -->
        <property name="volumeOfTumor" 
        	column="volume_of_tumor" 
        	type="float"/>	
        
        <!-- comparativeData -->
        <property name="comparativeData" 
        	column="comparative_data" 
        	type="string"/>
        	
        <!-- clinicalMarkerCollection (one-to-many unidirectional) -->
        <bag name="clinicalMarkerCollection" 
        	table="his_clinical_marker"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="histopathology_id"/>
        	<many-to-many column="clinical_marker_id"
            	unique="true"
            	class="ClinicalMarker"/>
        </bag>
        
        <!-- diseaseCollection (many-to-many bidirectional ) -->
	    <!-- Note: this collection will be used to synchronize state with the database. -->
        <bag name="diseaseCollection" 
        	table="histopathology_disease"
        	inverse="false"
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="histopathology_id"/>
        	<many-to-many class="Disease" 
        		column="disease_id"/>
        </bag>
        
        <!-- geneticAlteration: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one unidirectional) -->
        <many-to-one name="geneticAlteration"
        	class="GeneticAlteration"
        	column="genetic_alteration_id"
        	cascade="all"
        	unique="true"/> 
        
        <!-- metastatisCollection (one-to-many *SELF* unidirectional) -->
        <bag name="metastatisCollection" 
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="parent_histopathology_id"/>
        	<one-to-many class="Histopathology"/>
        </bag>
        	
        <!-- organ (many-to-one bidirectional) -->
        <join table="organ_histopathology" 
        	inverse="true" 
        	optional="true">
        	
        	<key column="histopathology_id"/>
        	<many-to-one name="organ" class="Organ"
            	column="organ_id"/> 
    	</join>   	
	</class>
</hibernate-mapping>