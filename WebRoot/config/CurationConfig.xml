<?xml version="1.0" encoding="UTF-8"?>
<curation-states xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://localhost:8080/camod/config/CurationConfig.xsd" >
	<state default="true">
	 	<name>Incomplete</name>
		<next-valid-states>
		    <next-valid-state>
		        <name>Complete-not screened</name>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>Complete-not screened</name>
	    <actions>
		    <action>email:Coordinator</action>
		</actions>
		<next-valid-states>
		    <next-valid-state>
		        <name>Screener-assigned</name>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>Screener-assigned</name>
	    <actions>
		    <action>email:Screener</action>
		</actions>
		<next-valid-states>
		    <next-valid-state>
		        <name>Screened-approved</name>
		        <match-event>approve</match-event>
		    </next-valid-state>
		    <next-valid-state>
		        <name>Screened-rejected</name>
		        <match-event>reject</match-event>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>Screened-approved</name>
		<next-valid-states>
		    <next-valid-state>
		        <name>Editor-assigned</name>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>Screened-rejected</name>
	</state>
	
	<state default="false">
	 	<name>Editor-assigned</name>
		<actions>
		    <action>email:Editor</action>
		</actions>
		<next-valid-states>
		    <next-valid-state>
		        <name>Edited-approved</name>
		        <match-event>approve</match-event>
		    </next-valid-state>
		    <next-valid-state>
		        <name>Edited-need more info</name>
		        <match-event>need_more_info</match-event>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>Edited-approved</name>
	</state>
	
	<state default="false">
	 	<name>Edited-need more info</name>
		<actions>
		    <action>email:Submitter</action>
		</actions>
		<next-valid-states>
		    <next-valid-state>
		        <name>Edited-approved</name>
		        <match-event>approve</match-event>
		    </next-valid-state>
		    <next-valid-state>
		        <name>Edited-need more info</name>
		        <match-event>need_more_info</match-event>
		    </next-valid-state>
		</next-valid-states>
	</state>
</curation-states>