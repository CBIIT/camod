<curation-states>
	<state default="true">
	 	<name>INCOMPLETE</name>
		<symbolic-name>Incomplete</symbolic-name>
		<next-valid-states>
		    <next-valid-state>
		        <name>COMPLETE</name>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>COMPLETE</name>
	    <actions>
		    <action>email:Coordinator</action>
		</actions>
		<symbolic-name>CompleteNotScreened</symbolic-name>
		<next-valid-states>
		    <next-valid-state>
		        <name>SCREENER_ASSIGNED</name>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>SCREENER_ASSIGNED</name>
		<symbolic-name>ScreenerAssigned</symbolic-name>
	    <actions>
		    <action>email:Screener</action>
		</actions>
		<next-valid-states>
		    <next-valid-state>
		        <name>SCREENER_APPROVED</name>
		        <match-event>approved</match-event>
		    </next-valid-state>
		    <next-valid-state>
		        <name>SCREENER_REJECTED</name>
		        <match-event>rejected</match-event>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>SCREENER_APPROVED</name>
		<symbolic-name>ScreenerApproved</symbolic-name>
		<next-valid-states>
		    <next-valid-state>
		        <name>REVIEWER_ASSIGNED</name>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>SCREENER_REJECTED</name>
		<symbolic-name>ScreenerRejected</symbolic-name>
	</state>
	
	<state default="false">
	 	<name>REVIEWER_ASSIGNED</name>
		<symbolic-name>ReviewerAssigned</symbolic-name>
		<actions>
		    <action>email:Editor</action>
		</actions>
		<next-valid-states>
		    <next-valid-state>
		        <name>REVIEWER_APPROVED</name>
		        <match-event>approved</match-event>
		    </next-valid-state>
		    <next-valid-state>
		        <name>REVIEWER_NEED_MORE_INFO</name>
		        <match-event>rejected</match-event>
		    </next-valid-state>
		</next-valid-states>
	</state>
	
	<state default="false">
	 	<name>REVIEWER_APPROVED</name>
		<symbolic-name>ReviewerApproved</symbolic-name>
	</state>
	
	<state default="false">
	 	<name>REVIEWER_NEED_MORE_INFO</name>
		<symbolic-name>ReviewerApproved</symbolic-name>
		<actions>
		    <action>email:Submitter</action>
		</actions>
		<next-valid-states>
		    <next-valid-state>
		        <name>REVIEWER_APPROVED</name>
		        <match-event>approved</match-event>
		    </next-valid-state>
		    <next-valid-state>
		        <name>REVIEWER_NEED_MORE_INFO</name>
		        <match-event>rejected</match-event>
		    </next-valid-state>
		</next-valid-states>
	</state>
</curation-states>