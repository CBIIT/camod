<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="CellLine" 
    	table="cell_line"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="cell_line_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	    
	    
	    <!-- components -->
        <property name="components" 
        	column="components" 
        	type="string"/>
	    
	    <!-- experiment -->
        <property name="experiment" 
        	column="experiment" 
        	type="string"/>
	    
	    <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>
        	
        <!-- results -->
        <property name="results" 
        	column="results" 
        	type="string"/>
        
        <!-- publicationCollection (one-to-many unidirectional) -->
        <bag name="publicationCollection"
        	table="cell_line_publication" 
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="cell_line_id"/>
        	<many-to-many column="publication_id"
            	unique="true"
            	class="Publication"/>
        </bag>
        
        <!-- organ (many-to-one unidirectional) -->
        <many-to-one
        	name="organ"
        	column="organ_id"
        	class="Organ"/>
	</class>
</hibernate-mapping>