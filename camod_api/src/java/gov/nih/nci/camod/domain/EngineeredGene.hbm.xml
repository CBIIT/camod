    Created on : May 5, 2005
    Author     : rajputs
    Description: Hibernate mapping file for EngineeredGene
-->

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="EngineeredGene" 
    	table="engineered_gene"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="engineered_gene_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	    
	    
	    <!-- discriminator -->
	    <discriminator column="engineered_gene_type"
	    	type="string"/>	       
	    
	    <!-- cabioId -->
        <property name="cabioId" 
        	column="cabio_id" 
        	type="long"/>	
           
        <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>
        	
        <!-- comments -->
        <property name="comments" 
        	column="comments" 
        	type="string"
        	length="2000"/>
        
        <!-- conditionality (many-to-one unidirectional) -->
        <many-to-one
        	name="conditionality"
        	column="conditionality_id"
        	class="Conditionality"
        	cascade="all-delete-orphan"/>
        	
        <!-- genotypeSummary (many-to-one unidirectional) -->
        <many-to-one
        	name="genotypeSummary"
        	column="genotype_summary_id"
        	cascade="all-delete-orphan"
        	class="GenotypeSummary"/>
        
        <!-- image (many-to-one unidirectional) -->
        <many-to-one
        	name="image"
        	column="image_id"
        	class="Image"
        	cascade="all-delete-orphan"/> 
        	
        <!-- mutationIdentifier: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one unidirectional) -->
        <many-to-one name="mutationIdentifier"
        	class="MutationIdentifier"
        	column="mutation_identifier_id"
        	cascade="all"
        	unique="true"/>  
        	
        <!-- expressionFeatureCollection (one-to-many unidirectional) -->
        <bag name="expressionFeatureCollection"
        	table="eng_gene_exp_feature" 
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="engineered_gene_id"/>
        	<many-to-many column="expression_feature_id"
            	unique="true"
            	class="ExpressionFeature"/>
        </bag>    
        
        <!-- geneFunctionCollection (one-to-many bidirectional) -->
        <set name="geneFunctionCollection"
	         cascade="all-delete-orphan">
            <key column="engineered_gene_id"/>
            <one-to-many class="GeneFunction"/>
        </set>
	</class>
</hibernate-mapping>