<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<subclass name="Xenograft" 
    	extends="AbstractCancerModel"
    	discriminator-value="X"
        lazy="true">
	    
	    <!-- administrativeSite -->
        <property name="administrativeSite" 
        	column="administrative_site" 
        	type="string"/>	
        
        <!-- geneticManipulation -->
        <property name="geneticManipulation" 
        	column="genetic_manipulation" 
        	type="string"/>	
        
        <!-- modificationDescription -->
        <property name="modificationDescription" 
        	column="modification_description" 
        	type="string"/>	
        	
        <!-- parentalCellLineName -->
        <property name="parentalCellLineName" 
        	column="parental_cell_line_name" 
        	type="string"/>	
        	
        <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>	
        
        <!-- atccNumber -->
        <!--<property name="atccNumber" 
        	column="atcc_number" 
        	type="string"/>
          -->
        	
        <!-- cellAmount -->
        <property name="cellAmount" 
        	column="cell_amount" 
        	type="string"/>	
        		
        <!-- harvestDate -->
        <property name="harvestDate" 
        	column="harvest_date" 
        	type="date"/>
        	
        <!-- graftType -->
        <property name="graftType" 
        	column="graft_type" 
        	type="string"/>
        
        <!-- graftTypeUnctrlVocab -->
        <property name="graftTypeUnctrlVocab" 
        	column="graft_type_unctrl_vocab" 
        	type="string"/>        
        
        <!-- tumorCode (many-to-one unidirectional) -->
        <many-to-one
        	name="tumorCode"
        	column="tumor_code_id"
        	class="TumorCode"/>
        	
        <!-- invivoResultCollection (one-to-many unidirectional) -->
        <bag name="invivoResultCollection" 
        	table="xenograft_invivo_result"
        	inverse="false" 
        	lazy="true" 
        	cascade="all-delete-orphan">
        	
        	<key column="abs_cancer_model_id"/>
        	<many-to-many column="invivo_result_id"
            	unique="true"
            	class="InvivoResult"/>
        </bag>
        
        <!-- originSpecies (many-to-one unidirectional) -->
        <many-to-one
        	name="originSpecies"
        	column="origin_species_id"
        	cascade="save-update"
        	class="Taxon"/>
        	
        <!-- hostSpecies (many-to-one unidirectional) -->
        <many-to-one
        	name="hostSpecies"
        	column="host_species_id"
        	cascade="save-update"
        	class="Taxon"/>    
        	
        <!-- organ: this is really a one-to-one relationship with unique=true -->
        <!-- (one-to-one unidirectional) -->
        <many-to-one name="organ"
        	class="Organ"
        	column="organ_id"
        	cascade="all"
        	unique="true"/>
	</subclass>
</hibernate-mapping>