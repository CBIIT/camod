<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="Taxon" 
    	table="taxon"
    	mutable="false"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="taxon_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>
	    
	    <!-- scientificName -->
        <property name="scientificName" 
        	column="scientific_name" 
        	type="string"/>
        	
        <!-- ethnicityStrain -->
        <property name="ethnicityStrain" 
        	column="ethnicity_strain" 
        	type="string"/>
        	
        <!--  ethnicityStrainUnctrlVocab -->
        <property name="ethnicityStrainUnctrlVocab" 
        	column="ethnicity_strain_unctrl_vocab" 
        	type="string"/>        
        	
        <!-- abbreviation -->
        <property name="abbreviation" 
        	column="abbreviation" 
        	type="string"/>	
        	
        <!-- commonName -->
        <property name="commonName" 
        	column="common_name" 
        	type="string"/>	
	</class>
</hibernate-mapping>