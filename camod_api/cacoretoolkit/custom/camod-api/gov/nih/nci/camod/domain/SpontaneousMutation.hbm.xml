    Description: Hibernate mapping file for SpontaneousMutation
-->

<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.camod.domain">
	<class name="SpontaneousMutation" 
    	table="spontaneous_mutation"
        lazy="true">

	    <!-- id -->
	    <id name="id" 
	    	column="spontaneous_mutation_id"
	    	type="long"    	
	    	unsaved-value="null">	    	
	        <generator class="native"/>
	    </id>	    
	    
	    <!-- name -->
        <property name="name" 
        	column="name" 
        	type="string"/>
        	
	    <!-- geneId -->
        <property name="geneId"
        	column="gene_id" 
        	type="string"/>        	
        	
        <!-- comments -->
        <property name="comments" 
        	column="comments" 
        	type="string"/>	
        	
        <!-- geneticAlterationCollection (one-to-many unidirectional without 
        join table) -->
        <set name="geneticAlterationCollection"
	      cascade="all-delete-orphan"
		sort="natural">
            <key column="genetic_alteration_id"
            not-null="true"/>
            <one-to-many class="SpontaneousMutation"/>
        </set>        
        
        <!-- mutationIdentifier (many-to-one unidirectional) -->
        <many-to-one
        	name="mutationIdentifier"
        	column="mutation_identifier_id"
        	cascade="save-update"
        	class="MutationIdentifier"/>
        	        
	</class>
</hibernate-mapping>